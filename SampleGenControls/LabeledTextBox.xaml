<UserControl x:Class="SampleGenControls.LabeledTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="LabelColumnWidth" Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="117*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Name="LabelComponent" />
        <TextBox Grid.Column="1" Grid.Row="0" Name="TextFieldComponent"/>
    </Grid>
</UserControl>
