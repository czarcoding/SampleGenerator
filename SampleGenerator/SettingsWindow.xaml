<Window x:Class="SampleGen.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dc="clr-namespace:SampleGenControls;assembly=SampleGenControls"
        Title="SettingsWindow" Height="300" Width="300" ShowInTaskbar="False">
    <Grid>
        <GroupBox Header="Annealing" VerticalAlignment="Top" BorderThickness="2" Margin="5">
            <StackPanel Orientation="Vertical" Margin="10">
                <dc:LabeledTextBox Name="MaxAnnealingEditor"  Margin="0,0,0,5" LabelWidth="150" LabelText="Max annealing iterations" />
                <dc:LabeledTextBox Name="InnerAnnealingEditor"  Margin="0,0,0,5" LabelWidth="150" LabelText="Inner annealing iterations"/>
                <dc:LabeledTextBox Name="StartingTemperatureEditor"  Margin="0,0,0,5" LabelWidth="150" LabelText="Starting temperature"/>
                <dc:LabeledTextBox Name="CoolingFactorEditor"  Margin="0,0,0,5" LabelWidth="150" LabelText="Cooling factor"/>
            </StackPanel>
        </GroupBox>
        <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="okButton" Margin="10" IsDefault="True" Content="OK" Width="100" Click="okButton_Click"/>
            <Button Name="cancelButton" Margin="10"  IsCancel="True" Content="Cancel" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
